{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@Assets/*": ["./src/assets/*"],
      "@BaseUi": ["./src/components/base"],
      "@Composables": ["./src/composables"],
      "@Helpers": ["./src/Helpers"],
      "@Libraries": ["./src/libraries"],
      "@Styles/*": ["./src/styles/*"],
      "@Plugins": ["./src/plugins"],
      "@Types": ["./src/Types"],
      "@Views": ["./src/views"]
    }
  }
}
